    <div class="col-6">
      <div class="wrapper" id="matchPostContainer">
        <div class="card" id="matchColumn">
          <div class="card-body" id="matchPost">
            <div class="container">
              {{#each matches}}
              {{> match/match-block}}
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--- CHAT BOX --->
    <div class="col-5">
      <div class="matchHeader">
        <div class="profile matchInfo">
          <h3>
            <img src="../public/img/icons/profileIconBlack.png" />
