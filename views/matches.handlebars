<div class="container-fluid" id="matchContentContainer">
  <div class="row">
    <div class="col-6">
      <div class="wrapper" id="matchPostContainer">
        <div class="card" id="matchColumn">
          <div class="card-body" id="matchPost">
            {{#each matches}}
            {{> match/match-block}}
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <!--- CHAT BOX --->
    <div class="col-5">
      <div class="matchHeader">
        <div class="profile matchInfo">
          <h3>
            <img src="../img/icons/profileIconBlack.png" />
            Herbert
          </h3>
        </div>
        <div class="age matchInfo">
          <h3><img src="../img/icons/ageiconBlack.png" /> 42</h3>
        </div>
        <div class="location matchInfo">
          <h3>
            <img src="../img/icons/locationIconBlack.png" /> San
            Francisco
          </h3>
        </div>
      </div>
      <div class="card" id="chatCard">
        <div class="card-body">
          <div class="row">
            <!-- match -->
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username"
            aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button">Send</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!--this is the end of the fluid container -->
</div>