<div class="matchHeader">
    <div class="profile matchInfo">
        <h3><img src="../img/profileIcon.png">{{firstname}}</h3>
    </div>
    <div class="age matchInfo">
        <h3><img src="../img/ageicon.png">{{age}}</h3>
        <div class="location matchInfo">
            <h3><img src="../img/locationicon.png">{{location}}</h3>
        </div>
    </div>
    <div class="card matchCard">
        <div class="card-body matchCardBody">
            <div class="row">
                <!-- match -->
                <div class="col-3">
                    <div class="matchPicContainer">
                        <img class="matchPic" src="/api/users/profilepic/{{profilepic}}">
                    </div>
                </div>
                <div class="col-8">
                    <div class="chatBody" data-userid={{userid}} id="chatbox-" +{{screenname}}>
